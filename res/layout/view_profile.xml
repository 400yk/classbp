<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/app"
    android:layout_width="1dp" android:layout_height="1dp" android:orientation="vertical" android:background="#1b1b1b"
    android:padding="2px" android:layout_margin="2px">
    <LinearLayout android:id="@+id/tabBar" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">

       <ImageView android:id="@+id/BtnSlide" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:padding="10px"          
            android:layout_margin="0px" 
            android:src="@drawable/menu_bar"  />
       
        <ImageView android:id="@+id/friendsRequests" 
            android:padding="10px" 
             android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="490dp"
       android:layout_gravity="center"
              android:src="@drawable/friends"  />
         
      <ImageView android:id="@+id/mail"        
            android:padding="10px" 
             android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
       android:layout_gravity="center"
              android:src="@drawable/mail"  />
      
      <ImageView android:id="@+id/notify"        
            android:padding="10px" 
             android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
       android:layout_gravity="center"
              android:src="@drawable/bell"  />       
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView android:id="@+id/profile_photo"        
            android:padding="20px" 
             android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="20dp"
       android:layout_gravity="center" />  
       
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          
       <TextView android:id="@+id/user_name_view"        
       android:padding="10px" 
       android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
       android:layout_gravity="center"
        />
       
       <TextView android:id="@+id/majors_view"        
       android:padding="10px" 
       android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
       android:layout_gravity="center"
        />
      </LinearLayout>
    </LinearLayout>
    
